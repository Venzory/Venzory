generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PracticeRole {
  ADMIN
  STAFF
  VIEWER
}

enum MembershipStatus {
  INVITED
  ACTIVE
  SUSPENDED
}

enum OrderStatus {
  DRAFT
  SENT
  RECEIVED
  CANCELLED
}

enum GoodsReceiptStatus {
  DRAFT
  CONFIRMED
  CANCELLED
}

enum StockCountStatus {
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum Gs1VerificationStatus {
  UNVERIFIED
  PENDING
  VERIFIED
  FAILED
  EXPIRED
}

enum IntegrationType {
  MANUAL
  API
  EDI
  OCI
  CSV
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  memberships           PracticeUser[]
  createdOrders         Order[]              @relation("OrderCreatedBy")
  stockAdjustments      StockAdjustment[]
  inventoryTransfers    InventoryTransfer[]  @relation("TransferCreatedBy")
  auditLogs             AuditLog[]           @relation("AuditLogActor")
  notifications         Notification[]       @relation("NotificationRecipient")
  inAppNotifications    InAppNotification[]  @relation("InAppNotificationUser")
  passwordResetTokens   PasswordResetToken[]
  createdOrderTemplates OrderTemplate[]      @relation("OrderTemplateCreatedBy")
  goodsReceipts         GoodsReceipt[]       @relation("GoodsReceiptCreatedBy")
  stockCountSessions    StockCountSession[]  @relation("StockCountCreatedBy")
}

model Practice {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  street       String?
  city         String?
  postalCode   String?
  country      String?
  contactEmail String?
  contactPhone String?
  logoUrl      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  users              PracticeUser[]
  locations          Location[]
  items              Item[]
  suppliers          Supplier[]
  orders             Order[]
  transfers          InventoryTransfer[]
  stockAdjustments   StockAdjustment[]
  auditLogs          AuditLog[]
  notifications      Notification[]
  inAppNotifications InAppNotification[]
  invites            UserInvite[]
  orderTemplates     OrderTemplate[]
  goodsReceipts      GoodsReceipt[]
  stockCountSessions StockCountSession[]
}

model PracticeUser {
  id         String           @id @default(cuid())
  practiceId String
  userId     String
  role       PracticeRole     @default(STAFF)
  status     MembershipStatus @default(INVITED)
  invitedAt  DateTime         @default(now())
  acceptedAt DateTime?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([practiceId, userId])
  @@index([userId])
}

model Location {
  id          String   @id @default(cuid())
  practiceId  String
  parentId    String?
  name        String
  code        String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  practice Practice   @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  parent   Location?  @relation("LocationHierarchy", fields: [parentId], references: [id])
  children Location[] @relation("LocationHierarchy")

  inventory          LocationInventory[]
  stockAdjustments   StockAdjustment[]
  outgoingTransfers  InventoryTransfer[] @relation("TransferFromLocation")
  incomingTransfers  InventoryTransfer[] @relation("TransferToLocation")
  goodsReceipts      GoodsReceipt[]
  stockCountSessions StockCountSession[]

  @@index([practiceId])
}

// Canonical product data (GS1-driven, shared across all practices)
// This represents the "universal" product information
model Product {
  id                    String                @id @default(cuid())
  gtin                  String?               @unique // Global Trade Item Number (nullable for non-GS1 products)
  brand                 String?
  name                  String
  description           String?
  isGs1Product          Boolean               @default(false)
  gs1VerificationStatus Gs1VerificationStatus @default(UNVERIFIED)
  gs1VerifiedAt         DateTime?
  gs1Data               Json? // Raw GS1 API response for reference
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt

  items            Item[]
  supplierCatalogs SupplierCatalog[]

  @@index([gtin])
  @@index([isGs1Product])
}

model Supplier {
  id         String   @id @default(cuid())
  practiceId String
  name       String
  email      String?
  phone      String?
  website    String?
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  practice           Practice            @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  items              SupplierItem[]
  defaultItems       Item[]              @relation("ItemDefaultSupplier")
  orders             Order[]
  orderTemplateItems OrderTemplateItem[]
  supplierCatalogs   SupplierCatalog[]
  goodsReceipts      GoodsReceipt[]

  @@index([practiceId])
}

// Links suppliers to canonical products with supplier-specific pricing and integration details
// This enables multiple suppliers to offer the same GS1 product with different terms
model SupplierCatalog {
  id                String          @id @default(cuid())
  supplierId        String
  productId         String
  supplierSku       String? // Supplier's own SKU for this product
  unitPrice         Decimal?        @db.Decimal(12, 2)
  currency          String?         @default("EUR")
  minOrderQty       Int?            @default(1)
  integrationType   IntegrationType @default(MANUAL)
  integrationConfig Json? // Store API endpoints, EDI settings, OCI params, etc.
  lastSyncAt        DateTime? // Last time this catalog entry was synced
  isActive          Boolean         @default(true)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([supplierId, productId])
  @@index([supplierId])
  @@index([productId])
  @@index([isActive])
}

// Practice-specific view of a Product
// Each practice can have their own name, SKU, and settings for the same canonical Product
model Item {
  id                String   @id @default(cuid())
  practiceId        String
  productId         String // Links to canonical Product
  defaultSupplierId String?
  name              String // Practice-specific name (can override Product name)
  sku               String? // Practice-specific SKU
  description       String? // Practice-specific description
  unit              String? // Practice-specific unit
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  practice           Practice            @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  product            Product             @relation(fields: [productId], references: [id], onDelete: Restrict)
  defaultSupplier    Supplier?           @relation("ItemDefaultSupplier", fields: [defaultSupplierId], references: [id])
  inventory          LocationInventory[]
  supplierItems      SupplierItem[]
  orderItems         OrderItem[]
  stockAdjustments   StockAdjustment[]
  transfers          InventoryTransfer[]
  orderTemplateItems OrderTemplateItem[]
  goodsReceiptLines  GoodsReceiptLine[]
  stockCountLines    StockCountLine[]

  @@index([practiceId])
  @@index([productId])
  @@index([defaultSupplierId])
}

model LocationInventory {
  locationId      String
  itemId          String
  quantity        Int      @default(0)
  reorderPoint    Int?
  reorderQuantity Int?
  updatedAt       DateTime @updatedAt

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  item     Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@id([locationId, itemId])
}

model SupplierItem {
  id          String   @id @default(cuid())
  supplierId  String
  itemId      String
  supplierSku String?
  unitPrice   Decimal? @db.Decimal(12, 2)
  currency    String?  @default("EUR")
  minOrderQty Int?     @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  item     Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([supplierId, itemId])
  @@index([itemId])
}

model Order {
  id          String      @id @default(cuid())
  practiceId  String
  supplierId  String
  status      OrderStatus @default(DRAFT)
  createdById String
  reference   String?
  notes       String?
  sentAt      DateTime?
  expectedAt  DateTime?
  receivedAt  DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  practice      Practice       @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  supplier      Supplier       @relation(fields: [supplierId], references: [id])
  createdBy     User           @relation("OrderCreatedBy", fields: [createdById], references: [id])
  items         OrderItem[]
  goodsReceipts GoodsReceipt[]

  @@index([practiceId])
  @@index([supplierId])
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  itemId    String
  quantity  Int
  unitPrice Decimal? @db.Decimal(12, 2)
  notes     String?

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  item  Item  @relation(fields: [itemId], references: [id])

  @@unique([orderId, itemId])
}

model OrderTemplate {
  id          String   @id @default(cuid())
  practiceId  String
  name        String
  description String?
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  practice  Practice            @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  createdBy User                @relation("OrderTemplateCreatedBy", fields: [createdById], references: [id])
  items     OrderTemplateItem[]

  @@index([practiceId])
}

model OrderTemplateItem {
  id              String   @id @default(cuid())
  templateId      String
  itemId          String
  defaultQuantity Int
  supplierId      String?
  createdAt       DateTime @default(now())

  template OrderTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  item     Item          @relation(fields: [itemId], references: [id], onDelete: Cascade)
  supplier Supplier?     @relation(fields: [supplierId], references: [id], onDelete: SetNull)

  @@unique([templateId, itemId])
  @@index([templateId])
  @@index([itemId])
}

model StockAdjustment {
  id          String   @id @default(cuid())
  itemId      String
  locationId  String
  practiceId  String
  quantity    Int
  reason      String?
  note        String?
  createdById String
  createdAt   DateTime @default(now())

  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  location  Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  practice  Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  createdBy User     @relation(fields: [createdById], references: [id])

  @@index([practiceId])
  @@index([itemId])
  @@index([locationId])
}

model InventoryTransfer {
  id             String   @id @default(cuid())
  practiceId     String
  itemId         String
  fromLocationId String
  toLocationId   String
  quantity       Int
  note           String?
  createdById    String
  createdAt      DateTime @default(now())

  practice     Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  item         Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  fromLocation Location @relation("TransferFromLocation", fields: [fromLocationId], references: [id])
  toLocation   Location @relation("TransferToLocation", fields: [toLocationId], references: [id])
  createdBy    User     @relation("TransferCreatedBy", fields: [createdById], references: [id])

  @@index([practiceId])
  @@index([itemId])
  @@index([fromLocationId])
  @@index([toLocationId])
}

model GoodsReceipt {
  id          String             @id @default(cuid())
  practiceId  String
  locationId  String
  orderId     String?
  supplierId  String?
  status      GoodsReceiptStatus @default(DRAFT)
  createdById String
  receivedAt  DateTime?
  notes       String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  practice  Practice           @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  location  Location           @relation(fields: [locationId], references: [id], onDelete: Restrict)
  order     Order?             @relation(fields: [orderId], references: [id], onDelete: SetNull)
  supplier  Supplier?          @relation(fields: [supplierId], references: [id], onDelete: SetNull)
  createdBy User               @relation("GoodsReceiptCreatedBy", fields: [createdById], references: [id])
  lines     GoodsReceiptLine[]

  @@index([practiceId])
  @@index([locationId])
  @@index([orderId])
  @@index([supplierId])
  @@index([status])
  @@index([createdAt])
}

model GoodsReceiptLine {
  id          String    @id @default(cuid())
  receiptId   String
  itemId      String
  quantity    Int
  batchNumber String?
  expiryDate  DateTime?
  notes       String?
  scannedGtin String?
  createdAt   DateTime  @default(now())

  receipt GoodsReceipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  item    Item         @relation(fields: [itemId], references: [id], onDelete: Restrict)

  @@index([receiptId])
  @@index([itemId])
}

model StockCountSession {
  id          String           @id @default(cuid())
  practiceId  String
  locationId  String
  status      StockCountStatus @default(IN_PROGRESS)
  createdById String
  completedAt DateTime?
  notes       String?
  createdAt   DateTime         @default(now())

  practice  Practice         @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  location  Location         @relation(fields: [locationId], references: [id], onDelete: Restrict)
  createdBy User             @relation("StockCountCreatedBy", fields: [createdById], references: [id])
  lines     StockCountLine[]

  @@index([practiceId])
  @@index([locationId])
  @@index([status])
  @@index([createdAt])
}

model StockCountLine {
  id              String   @id @default(cuid())
  sessionId       String
  itemId          String
  countedQuantity Int
  systemQuantity  Int
  variance        Int
  notes           String?
  createdAt       DateTime @default(now())

  session StockCountSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  item    Item              @relation(fields: [itemId], references: [id], onDelete: Restrict)

  @@index([sessionId])
  @@index([itemId])
}

model AuditLog {
  id         String   @id @default(cuid())
  practiceId String
  actorId    String?
  entityType String
  entityId   String
  action     String
  changes    Json?
  metadata   Json?
  createdAt  DateTime @default(now())

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  actor    User?    @relation("AuditLogActor", fields: [actorId], references: [id], onDelete: SetNull)

  @@index([practiceId])
  @@index([entityType, entityId])
}

model Notification {
  id          String    @id @default(cuid())
  practiceId  String
  recipientId String
  type        String
  payload     Json?
  status      String    @default("PENDING")
  sentAt      DateTime?
  createdAt   DateTime  @default(now())

  practice  Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  recipient User     @relation("NotificationRecipient", fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([practiceId])
  @@index([recipientId])
}

model InAppNotification {
  id         String   @id @default(cuid())
  practiceId String
  userId     String?
  type       String
  title      String
  message    String
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())
  orderId    String?
  itemId     String?
  locationId String?

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  user     User?    @relation("InAppNotificationUser", fields: [userId], references: [id], onDelete: Cascade)

  @@index([practiceId])
  @@index([userId])
  @@index([read])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model UserInvite {
  id          String       @id @default(cuid())
  token       String       @unique
  email       String
  practiceId  String
  role        PracticeRole @default(STAFF)
  inviterName String?
  expiresAt   DateTime
  used        Boolean      @default(false)
  createdAt   DateTime     @default(now())

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([practiceId])
}
