// ============================================
// SUPPLIER ITEM (Enhanced with Matching - Phase 1)
// ============================================
// Global Supplier Item - what a supplier sells (Global catalog)
// Links a GlobalSupplier to a Product with commercial terms
model SupplierItem {
  id               String @id @default(cuid())
  globalSupplierId String
  productId        String

  // Supplier's data
  supplierSku         String? // Supplier's own SKU for this product
  supplierName        String? // Supplier's product name (may differ from GS1)
  supplierDescription String? // Supplier's description

  // Pricing
  unitPrice   Decimal? @db.Decimal(12, 2)
  currency    String?  @default("EUR")
  minOrderQty Int?     @default(1)

  // Stock (from supplier catalog)
  stockLevel   Int? // Current stock level at supplier
  leadTimeDays Int? // Typical lead time in days

  // Match quality (Phase 1 - GTIN matching)
  matchMethod     MatchMethod @default(MANUAL)
  matchConfidence Decimal?    @db.Decimal(5, 4) // 0.0000 - 1.0000
  matchedAt       DateTime? // When the match was made
  matchedBy       String? // User ID or "system" for automatic matches

  // Integration
  integrationType   IntegrationType @default(MANUAL)
  integrationConfig Json? // Store API endpoints, EDI settings, OCI params, etc.
  lastSyncAt        DateTime? // Last time this catalog entry was synced
  isActive          Boolean         @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  globalSupplier GlobalSupplier @relation(fields: [globalSupplierId], references: [id], onDelete: Cascade)
  product        Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  items          Item[]

  @@unique([globalSupplierId, productId])
  @@index([globalSupplierId])
  @@index([productId])
  @@index([isActive])
  @@index([supplierSku])
  @@index([matchMethod])
}

// Practice-specific view of a Product
// Each practice can have their own name, SKU, and settings for the same canonical Product
model Item {
  id                        String   @id @default(cuid())
  practiceId                String
  productId                 String // Links to canonical Product
  supplierItemId            String? // Link to Global Supplier Item (optional)
  defaultPracticeSupplierId String?
  name                      String // Practice-specific name (can override Product name)
  sku                       String? // Practice-specific SKU
  description               String? // Practice-specific description
  unit                      String? // Practice-specific unit
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt

  practice                Practice               @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  product                 Product                @relation(fields: [productId], references: [id], onDelete: Restrict)
  supplierItem            SupplierItem?          @relation(fields: [supplierItemId], references: [id], onDelete: SetNull)
  defaultPracticeSupplier PracticeSupplier?      @relation(fields: [defaultPracticeSupplierId], references: [id], onDelete: SetNull)
  inventory               LocationInventory[]
  practiceSupplierItems   PracticeSupplierItem[]
  orderItems              OrderItem[]
  stockAdjustments        StockAdjustment[]
  transfers               InventoryTransfer[]
  orderTemplateItems      OrderTemplateItem[]
  goodsReceiptLines       GoodsReceiptLine[]
  stockCountLines         StockCountLine[]

  @@unique([practiceId, name])
  @@index([practiceId])
  @@index([productId])
  @@index([supplierItemId])
  @@index([defaultPracticeSupplierId])
  @@index([practiceId, sku])
}

model LocationInventory {
  locationId      String
  itemId          String
  quantity        Int      @default(0)
  reorderPoint    Int?
  reorderQuantity Int?
  maxStock        Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  item     Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@id([locationId, itemId])
  @@index([itemId, reorderPoint, quantity])
}

model PracticeSupplierItem {
  id                 String   @id @default(cuid())
  practiceSupplierId String
  itemId             String
  supplierSku        String?
  unitPrice          Decimal? @db.Decimal(12, 2)
  currency           String?  @default("EUR")
  minOrderQty        Int?     @default(1)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  practiceSupplier PracticeSupplier @relation(fields: [practiceSupplierId], references: [id], onDelete: Cascade)
  item             Item             @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([practiceSupplierId, itemId])
  @@index([itemId])
  @@index([practiceSupplierId])
}

model Order {
  id                 String      @id @default(cuid())
  practiceId         String
  practiceSupplierId String?
  status             OrderStatus @default(DRAFT)
  createdById        String?
  reference          String?
  notes              String?
  sentAt             DateTime?
  expectedAt         DateTime?
  receivedAt         DateTime?
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  practice         Practice          @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  practiceSupplier PracticeSupplier? @relation(fields: [practiceSupplierId], references: [id], onDelete: SetNull)
  createdBy        User?             @relation("OrderCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)
  items            OrderItem[]
  goodsReceipts    GoodsReceipt[]

  @@index([practiceId])
  @@index([practiceSupplierId])
  @@index([practiceId, status, createdAt])
  @@index([practiceId, createdAt]) // Optimization for sorting by date
  @@index([practiceId, updatedAt]) // Optimization for receiving mismatches
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  itemId    String
  quantity  Int
  unitPrice Decimal? @db.Decimal(12, 2)
  notes     String?

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  item  Item  @relation(fields: [itemId], references: [id])

  @@unique([orderId, itemId])
}

model OrderTemplate {
