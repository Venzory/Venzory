generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum PracticeRole {
  ADMIN
  STAFF
  VIEWER
}

enum MembershipStatus {
  INVITED
  ACTIVE
  SUSPENDED
}

enum OrderStatus {
  DRAFT
  SENT
  PARTIALLY_RECEIVED
  RECEIVED
  CANCELLED
}

enum GoodsReceiptStatus {
  DRAFT
  CONFIRMED
  CANCELLED
}

enum StockCountStatus {
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum Gs1VerificationStatus {
  UNVERIFIED
  PENDING
  VERIFIED
  FAILED
  EXPIRED
}

enum IntegrationType {
  MANUAL
  API
  EDI
  OCI
  CSV
}

// ============================================
// GS1 FOUNDATION ENUMS (Phase 1)
// ============================================

enum PackagingLevel {
  EACH
  INNER_PACK
  CASE
  PALLET
}

enum MediaType {
  PRODUCT_IMAGE
  MARKETING_IMAGE
  PLANOGRAM
  VIDEO
  THREE_D_MODEL
}

enum DocumentType {
  IFU // Instructions for Use
  SDS // Safety Data Sheet
  CE_DECLARATION // CE Declaration of Conformity
  FDA_510K // FDA 510(k) clearance
  TECHNICAL_FILE // Technical documentation
  LABEL_ARTWORK // Product labeling
  CLINICAL_DATA // Clinical evaluation
  RISK_ANALYSIS // Risk management
  OTHER
}

enum RegulatoryAuthority {
  EU_MDR // EU Medical Device Regulation
  EU_IVDR // EU In Vitro Diagnostic Regulation
  FDA // US FDA
  TGA // Australia TGA
  HEALTH_CANADA
  PMDA // Japan
  NMPA // China
  OTHER
}

enum ComplianceStatus {
  UNKNOWN
  PENDING
  COMPLIANT
  NON_COMPLIANT
  EXEMPT
  EXPIRED
}

enum MatchMethod {
  MANUAL // Human verified
  EXACT_GTIN // Direct GTIN match
  FUZZY_NAME // AI/fuzzy name matching
  BARCODE_SCAN // Scanned barcode
  SUPPLIER_MAPPED // Supplier provided mapping
}

enum SubscriptionStatus {
  PENDING
  ACTIVE
  SUSPENDED
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  memberships           PracticeUser[]
  createdOrders         Order[]              @relation("OrderCreatedBy")
  stockAdjustments      StockAdjustment[]
  inventoryTransfers    InventoryTransfer[]  @relation("TransferCreatedBy")
  auditLogs             AuditLog[]           @relation("AuditLogActor")
  notifications         Notification[]       @relation("NotificationRecipient")
  inAppNotifications    InAppNotification[]  @relation("InAppNotificationUser")
  passwordResetTokens   PasswordResetToken[]
  createdOrderTemplates OrderTemplate[]      @relation("OrderTemplateCreatedBy")
  goodsReceipts         GoodsReceipt[]       @relation("GoodsReceiptCreatedBy")
  stockCountSessions    StockCountSession[]  @relation("StockCountCreatedBy")
}

model Practice {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  street       String?
  city         String?
  postalCode   String?
  country      String?
  contactEmail String?
  contactPhone String?
  logoUrl      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Onboarding tracking
  onboardingCompletedAt DateTime?
  onboardingSkippedAt   DateTime?

  users              PracticeUser[]
  locations          Location[]
  items              Item[]
  orders             Order[]
  transfers          InventoryTransfer[]
  stockAdjustments   StockAdjustment[]
  auditLogs          AuditLog[]
  notifications      Notification[]
  inAppNotifications InAppNotification[]
  invites            UserInvite[]
  orderTemplates     OrderTemplate[]
  goodsReceipts      GoodsReceipt[]
  stockCountSessions StockCountSession[]
  practiceSuppliers  PracticeSupplier[]
