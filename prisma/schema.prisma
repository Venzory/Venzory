// ============================================
// DATA QUALITY TRACKING
// ============================================
// Calculated score indicating data completeness and quality
model ProductQualityScore {
  id        String @id @default(cuid())
  productId String @unique

  // Overall score (0-100)
  overallScore Int @default(0)

  // Component scores (0-100 each)
  basicDataScore  Int @default(0) // Name, brand, description
  gs1DataScore    Int @default(0) // GS1 verification
  mediaScore      Int @default(0) // Images present
  documentScore   Int @default(0) // IFU/SDS present
  regulatoryScore Int @default(0) // UDI/compliance
  packagingScore  Int @default(0) // Hierarchy complete

  // Issues
  missingFields String[] // List of missing required fields
  warnings      String[] // Non-critical issues

  calculatedAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([overallScore])
}

// ============================================
// GDSN SUBSCRIPTION MANAGEMENT
// ============================================
// Manages subscriptions to receive product data from GDSN
model GdsnSubscription {
  id String @id @default(cuid())

  dataPoolId     String // e.g., "1WorldSync", "Syndigo", "GS1GO"
  subscriptionId String @unique // ID from data pool provider

  // Target (our receiving identity)
  targetGln String // Our receiving GLN

  // Source (what we're subscribing to)
  sourceGln    String? // Publisher GLN (or null for registry-wide)
  gpcCategory  String? // GPC code filter
  targetMarket String? // Country code filter

  // Status
  status          SubscriptionStatus @default(PENDING)
  activatedAt     DateTime?
  lastCinReceived DateTime? // Last Change In Notification

  // Metadata
  notes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([targetGln])
  @@index([status])
  @@index([dataPoolId])
}
