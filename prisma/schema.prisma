  practiceId  String
  role        PracticeRole @default(STAFF)
  inviterName String?
  expiresAt   DateTime
  used        Boolean      @default(false)
  createdAt   DateTime     @default(now())

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([practiceId])
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model EmailJob {
  id          String    @id @default(cuid())
  type        String // e.g., "ORDER_CONFIRMATION"
  recipient   String
  payload     Json // Stores all data needed to send the email
  status      JobStatus @default(PENDING)
  attempts    Int       @default(0)
  lastError   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  processedAt DateTime?

  @@index([status])
  @@index([createdAt])
}

// ============================================
// GS1 FOUNDATION MODELS (Phase 1)
// ============================================

// ============================================
// PACKAGING HIERARCHY
// ============================================
// Represents the packaging hierarchy for a product (each, inner pack, case, pallet)
// Each level may have its own GTIN
model ProductPackaging {
  id        String @id @default(cuid())
  productId String

  // Packaging level
  level PackagingLevel // EACH, INNER_PACK, CASE, PALLET
  gtin  String? // GTIN at this packaging level

  // Hierarchy
  parentId   String? // Parent packaging level
  childCount Int? // Items contained at this level

  // Dimensions
  height       Decimal? @db.Decimal(10, 3)
  width        Decimal? @db.Decimal(10, 3)
  depth        Decimal? @db.Decimal(10, 3)
  dimensionUom String?  @default("cm")
  grossWeight  Decimal? @db.Decimal(10, 3)
  weightUom    String?  @default("kg")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product  Product            @relation(fields: [productId], references: [id], onDelete: Cascade)
  parent   ProductPackaging?  @relation("PackagingHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children ProductPackaging[] @relation("PackagingHierarchy")

  @@index([productId])
  @@index([gtin])
  @@index([level])
}

// ============================================
// MEDIA ASSETS
// ============================================
// Images and visual assets associated with a product
model ProductMedia {
  id        String @id @default(cuid())
  productId String

  type     MediaType // PRODUCT_IMAGE, MARKETING_IMAGE, etc.
  url      String // Source URL
  filename String?
  mimeType String?
  fileSize Int? // Size in bytes

  // Image specifics
  width     Int?
  height    Int?
  isPrimary Boolean @default(false)
  angle     String? // front, back, left, right, etc.

  // GS1 Digital Link (if applicable)
  gs1DigitalLink String?

  // Storage (for downloaded assets)
  storageProvider String? @default("local") // local, s3, cloudinary
  storageKey      String? // Path or key in storage system

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([type])
  @@index([isPrimary])
}

