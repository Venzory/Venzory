model PracticeUser {
  id         String           @id @default(cuid())
  practiceId String
  userId     String
  role       PracticeRole     @default(STAFF)
  status     MembershipStatus @default(INVITED)
  invitedAt  DateTime         @default(now())
  acceptedAt DateTime?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([practiceId, userId])
  @@index([userId])
}

model Location {
  id          String   @id @default(cuid())
  practiceId  String
  parentId    String?
  name        String
  code        String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  practice Practice   @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  parent   Location?  @relation("LocationHierarchy", fields: [parentId], references: [id])
  children Location[] @relation("LocationHierarchy")

  inventory          LocationInventory[]
  stockAdjustments   StockAdjustment[]
  outgoingTransfers  InventoryTransfer[] @relation("TransferFromLocation")
  incomingTransfers  InventoryTransfer[] @relation("TransferToLocation")
  goodsReceipts      GoodsReceipt[]
  stockCountSessions StockCountSession[]

  @@index([practiceId])
}

// ============================================
// PRODUCT (GS1 Manufacturer Master - Enhanced)
// ============================================
// Canonical product data (GS1-driven, shared across all practices)
// This represents the "universal" product information from manufacturers
model Product {
  id   String  @id @default(cuid())
  gtin String? @unique // Global Trade Item Number (nullable for non-GS1 products)

  // Basic identifiers
  brand            String?
  name             String
  description      String?
  shortDescription String? // Brief description for listings

  // GS1 Core Attributes (Phase 1)
  manufacturerGln         String? // GLN of manufacturer
  manufacturerName        String? // Manufacturer company name
  tradeItemClassification String? // GPC code (Global Product Classification)
  targetMarket            String[] // Country codes (ISO 3166-1 alpha-2)

  // Medical Device Specific (MDR/IVDR)
  isRegulatedDevice Boolean @default(false)
  deviceRiskClass   String? // Class I, IIa, IIb, III
  udiDi             String? // UDI Device Identifier
  gudidDatabaseId   String? // FDA GUDID reference
  eudamedId         String? // EU EUDAMED ID
  gmdnCode          String? // Global Medical Device Nomenclature

  // Physical attributes
  netContentValue Decimal? @db.Decimal(12, 4)
  netContentUom   String? // Unit of measure (e.g., "ml", "g", "each")
  grossWeight     Decimal? @db.Decimal(12, 4)
  grossWeightUom  String? // Weight unit (e.g., "kg", "g")

  // GS1 Verification
  isGs1Product          Boolean               @default(false)
  gs1VerificationStatus Gs1VerificationStatus @default(UNVERIFIED)
  gs1VerifiedAt         DateTime?
  gs1SyncedAt           DateTime? // Last GDSN sync timestamp
  gs1Data               Json? // Raw GS1/GDSN API response for reference

  // Version tracking for change detection
  version Int @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Existing relations
  items         Item[]
  supplierItems SupplierItem[]

  // GS1 Foundation relations (Phase 1)
  packaging    ProductPackaging[]
  media        ProductMedia[]
  documents    ProductDocument[]
  regulatory   ProductRegulatory[]
  logistics    ProductLogistics?
  qualityScore ProductQualityScore?

  @@index([gtin])
  @@index([isGs1Product])
  @@index([manufacturerGln])
  @@index([gs1VerificationStatus])
  @@index([udiDi])
}

model GlobalSupplier {
  id        String   @id @default(cuid())
  name      String   @unique
  email     String?
  phone     String?
  website   String?
  notes     String? // General supplier notes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  practiceLinks PracticeSupplier[]
  supplierItems SupplierItem[]

  @@index([name])
}

model PracticeSupplier {
  id               String @id @default(cuid())
  practiceId       String
  globalSupplierId String

  // Practice-specific fields
  accountNumber String? // Practice's account/customer number at this supplier
  customLabel   String? // Practice-specific display name override
  orderingNotes String? // Practice-specific ordering/delivery notes
  isPreferred   Boolean @default(false)
  isBlocked     Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  practice       Practice       @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  globalSupplier GlobalSupplier @relation(fields: [globalSupplierId], references: [id], onDelete: Cascade)

  // Reverse relations
  orders                Order[]
  practiceSupplierItems PracticeSupplierItem[]
  defaultItems          Item[]
  orderTemplateItems    OrderTemplateItem[]
  goodsReceipts         GoodsReceipt[]

  @@unique([practiceId, globalSupplierId])
  @@index([practiceId])
  @@index([globalSupplierId])
}

