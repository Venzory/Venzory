generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PracticeRole {
  ADMIN
  STAFF
  VIEWER
}

enum MembershipStatus {
  INVITED
  ACTIVE
  SUSPENDED
}

enum OrderStatus {
  DRAFT
  SENT
  RECEIVED
  CANCELLED
}

model User {
  id        String         @id @default(cuid())
  email     String         @unique
  name      String?
  image     String?
  emailVerified DateTime?
  passwordHash  String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  accounts          Account[]
  sessions          Session[]
  memberships       PracticeUser[]
  createdOrders     Order[]         @relation("OrderCreatedBy")
  stockAdjustments  StockAdjustment[]
  inventoryTransfers InventoryTransfer[] @relation("TransferCreatedBy")
  auditLogs         AuditLog[]      @relation("AuditLogActor")
  notifications     Notification[]  @relation("NotificationRecipient")
}

model Practice {
  id        String         @id @default(cuid())
  name      String
  slug      String         @unique
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  users        PracticeUser[]
  locations    Location[]
  items        Item[]
  suppliers    Supplier[]
  orders       Order[]
  transfers    InventoryTransfer[]
  stockAdjustments StockAdjustment[]
  auditLogs    AuditLog[]
  notifications Notification[]
}

model PracticeUser {
  id          String          @id @default(cuid())
  practiceId  String
  userId      String
  role        PracticeRole    @default(STAFF)
  status      MembershipStatus @default(INVITED)
  invitedAt   DateTime         @default(now())
  acceptedAt  DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([practiceId, userId])
  @@index([userId])
}

model Location {
  id          String      @id @default(cuid())
  practiceId  String
  parentId    String?
  name        String
  code        String?
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  parent   Location? @relation("LocationHierarchy", fields: [parentId], references: [id])
  children Location[] @relation("LocationHierarchy")

  inventory LocationInventory[]
  stockAdjustments StockAdjustment[]
  outgoingTransfers InventoryTransfer[] @relation("TransferFromLocation")
  incomingTransfers InventoryTransfer[] @relation("TransferToLocation")

  @@index([practiceId])
}

model Supplier {
  id          String    @id @default(cuid())
  practiceId  String
  name        String
  email       String?
  phone       String?
  website     String?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  items    SupplierItem[]
  defaultItems Item[] @relation("ItemDefaultSupplier")
  orders   Order[]

  @@index([practiceId])
}

model Item {
  id               String     @id @default(cuid())
  practiceId       String
  defaultSupplierId String?
  name             String
  sku              String?
  description      String?
  unit             String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  defaultSupplier Supplier? @relation("ItemDefaultSupplier", fields: [defaultSupplierId], references: [id])
  inventory LocationInventory[]
  supplierItems SupplierItem[]
  orderItems OrderItem[]
  stockAdjustments StockAdjustment[]
  transfers InventoryTransfer[]

  @@index([practiceId])
  @@index([defaultSupplierId])
}

model LocationInventory {
  locationId    String
  itemId        String
  quantity      Int       @default(0)
  reorderPoint  Int?
  reorderQuantity Int?
  updatedAt     DateTime  @updatedAt

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  item     Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@id([locationId, itemId])
}

model SupplierItem {
  id          String   @id @default(cuid())
  supplierId  String
  itemId      String
  supplierSku String?
  unitPrice   Decimal? @db.Decimal(12, 2)
  currency    String?  @default("EUR")
  minOrderQty Int?     @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  item     Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([supplierId, itemId])
  @@index([itemId])
}

model Order {
  id           String      @id @default(cuid())
  practiceId   String
  supplierId   String
  status       OrderStatus @default(DRAFT)
  createdById  String
  reference    String?
  notes        String?
  sentAt       DateTime?
  expectedAt   DateTime?
  receivedAt   DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  supplier Supplier @relation(fields: [supplierId], references: [id])
  createdBy User    @relation("OrderCreatedBy", fields: [createdById], references: [id])
  items     OrderItem[]

  @@index([practiceId])
  @@index([supplierId])
}

model OrderItem {
  id         String  @id @default(cuid())
  orderId    String
  itemId     String
  quantity   Int
  unitPrice  Decimal? @db.Decimal(12, 2)
  notes      String?

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  item  Item  @relation(fields: [itemId], references: [id])

  @@unique([orderId, itemId])
}

model StockAdjustment {
  id           String   @id @default(cuid())
  itemId       String
  locationId   String
  practiceId   String
  quantity     Int
  reason       String?
  note         String?
  createdById  String
  createdAt    DateTime @default(now())

  item     Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  createdBy User     @relation(fields: [createdById], references: [id])

  @@index([practiceId])
  @@index([itemId])
  @@index([locationId])
}

model InventoryTransfer {
  id              String   @id @default(cuid())
  practiceId      String
  itemId          String
  fromLocationId  String
  toLocationId    String
  quantity        Int
  note            String?
  createdById     String
  createdAt       DateTime @default(now())

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  item     Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  fromLocation Location @relation("TransferFromLocation", fields: [fromLocationId], references: [id])
  toLocation   Location @relation("TransferToLocation", fields: [toLocationId], references: [id])
  createdBy User        @relation("TransferCreatedBy", fields: [createdById], references: [id])

  @@index([practiceId])
  @@index([itemId])
  @@index([fromLocationId])
  @@index([toLocationId])
}

model AuditLog {
  id          String   @id @default(cuid())
  practiceId  String
  actorId     String?
  entityType  String
  entityId    String
  action      String
  changes     Json?
  metadata    Json?
  createdAt   DateTime @default(now())

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  actor    User?     @relation("AuditLogActor", fields: [actorId], references: [id], onDelete: SetNull)

  @@index([practiceId])
  @@index([entityType, entityId])
}

model Notification {
  id          String   @id @default(cuid())
  practiceId  String
  recipientId String
  type        String
  payload     Json?
  status      String   @default("PENDING")
  sentAt      DateTime?
  createdAt   DateTime @default(now())

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  recipient User     @relation("NotificationRecipient", fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([practiceId])
  @@index([recipientId])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

